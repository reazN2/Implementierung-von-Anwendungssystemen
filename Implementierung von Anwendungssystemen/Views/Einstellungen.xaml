<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Implementierung_von_Anwendungssystemen.Views.Einstellungen">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="10,10,10,0" VerticalOptions="CenterAndExpand">
                <StackLayout HorizontalOptions="Center">
                    <Label Text="Name:" FontSize="Title"/>
                    <Entry Placeholder="Name" FontSize="16" x:Name="EntryUserName"/>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Entry Placeholder="Password" FontSize="16" x:Name="EntryUserPassword"/>
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Entry Placeholder="Email" FontSize="16" x:Name="EntryUserEmail"/>
                </StackLayout>
                <StackLayout Grid.Row="3">
                    <Entry Placeholder="University" FontSize="16" x:Name="EntryUserUniversity"/>
                </StackLayout>
                <StackLayout Grid.Row="4">
                    <Button VerticalOptions="Center" Text="Save Changes" Clicked="UpdateAccountInfo"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>